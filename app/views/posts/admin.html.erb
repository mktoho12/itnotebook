<p><%= link_to("新規投稿","new") %></p>
<p><%= link_to("画像アップロード","/comments/new") %></p>

<table>
  <tr>
    <th style="width:1.5em">ID</th>
    <th>タイトル</th>
    <th>本文</th>
    <th style="width:50px">画像</th>
    <th>作成日</th>
    <th>更新日</th>
    <th style="width:2em"></th>
    <th style="width:2em"></th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td style="text-align:right"><%= post.id %></td>
    <td><%= link_to post.title || '【タイトルなし】', post_path(post) %></td>
    <td><%= post.content&.truncate(15) %></td>
    <td><%= render 'image', post: post, options: { size: '50x50' } %></td>
    <td><small><em><%= post.created_at.strftime '%Y/%m/%d %H:%M' %></em></small></td>
    <td><small><em><%= post.updated_at.strftime '%Y/%m/%d %H:%M' %></em></small></td>
    <td><%= link_to '編集', edit_post_path(post) %></td>
    <td><%= link_to '削除', post_path(post), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
  </tr>
<% end %>
</table>

<%= link_to("ログアウト","/users/logout",{method: :post}) %>
